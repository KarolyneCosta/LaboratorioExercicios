@model LaboratorioDaKarolyne.Models.Cidade
@{
    ViewBag.Title = "Editar Cidade";
}
<h2>Editar Cidade</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(id=>id.IdCidade)
    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @Placeholder = "Insira o nome da cidade..." } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EnumEstado)
        @Html.EnumDropDownListFor(model => model.EnumEstado, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-1">
            <input type="submit" value="Salvar" class="btn btn-success" />
            @Html.ActionLink("Cancelar", "Index", "", new { @class = "btn btn-default" })
        </div>
    </div>
}

