@model LaboratorioDaKarolyne.Models.Cidade
@{
    ViewBag.Title = "Excluir Cidade";
}

<h2>Você deseja realmente Excluir a cidade @Model.Nome ? </h2>
<hr />

<form method="post">
    <input type="hidden" name="IdCidade" value="@Model.IdCidade" />

    <div class="form-group">
        @Html.LabelFor(model => model.Nome): @Model.Nome
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EnumEstado): @Model.EnumEstado
    </div>

    <div class="form-actions no-color">
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        @Html.ActionLink("Cancelar", "Index", new { @class="btn btn-default"})
    </div>
</form>

