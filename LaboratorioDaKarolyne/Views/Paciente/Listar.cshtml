@model IEnumerable<LaboratorioDaKarolyne.Models.Paciente>
@{
    ViewBag.Title = "Listar Pacientes";
}

<h2>Listar Pacientes</h2>

<hr />
<div class="row">
    <div class="col-md-offset-11">
        <p>
            @Html.ActionLink(" ", "Novo", null, new { @class = " glyphicon glyphicon-plus btn btn-primary", })
        </p>
    </div>
</div>
@using (Html.BeginForm("post"))
{
    <div class="row">
        <div class="col-md-3">
            <input type="text" name="nomeBusca" id="nomeBusca" class="form-control" />
        </div>
        <div class="col-lg-offset-3">
            <button type="submit" class="btn btn-primary"><i class=" glyphicon glyphicon-search"></i></button>
        </div>
    </div>
    <br />
}
